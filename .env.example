# Postgres container configuration (CRM sandbox)
POSTGRES_DB=crm_sandbox
POSTGRES_USER=crm_app
POSTGRES_PASSWORD=crm_password

# Application-facing connection details
DB_HOST=localhost
DB_PORT=5432
DB_NAME=crm_sandbox
DB_USER=crm_app
DB_PASSWORD=crm_password
DATABASE_URL=postgresql://crm_app:crm_password@localhost:5432/crm_sandbox

# Optional pgAdmin UI
PGADMIN_DEFAULT_EMAIL=dev@arc.example
PGADMIN_DEFAULT_PASSWORD=pgadmin
PGADMIN_PORT=8080

# -----------------------------------------------------------------------------
# Atlas SDK integration
# -----------------------------------------------------------------------------

# Path to the cloned Atlas SDK repository (used for editable installs)
ATLAS_HOME=external/atlas-sdk

# Dedicated Atlas telemetry database (atlas init runs Postgres on port 5433)
ATLAS_DATABASE_URL=postgresql://atlas:atlas@localhost:5433/atlas

# LLM credentials used by Atlas teacher/student + reward models
OPENAI_API_KEY=sk-your-openai-key
ANTHROPIC_API_KEY=sk-your-anthropic-key
GEMINI_API_KEY=sk-your-gemini-key

# Toggle Atlas offline simulators for smoke tests (set to 1 to avoid external API calls)
ATLAS_OFFLINE_MODE=0
